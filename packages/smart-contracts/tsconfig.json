{
  "compilerOptions": {
    "downlevelIteration": true,
    "target": "es2019",
    "lib": ["es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "types"
  },
  "exclude": [
    "node_modules",
    "tests",
    "**/*.d.ts",
    "dist"
  ],
  "include": ["./index.js", "./cli/**/*.js"]
}
